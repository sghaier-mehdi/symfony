{# templates/admin_reponse/show.html.twig #}
{% extends 'back/base.html.twig' %}

{% block title %}Détail de la Réponse{% endblock %}

{% block body %}
    <h1>Détail de la Réponse</h1>

    <div class="card mb-3">
        <div class="card-header">Réclamation Associée</div>
        <div class="card-body">
            <h5 class="card-title">{{ reclamation.titre }}</h5>
            <p class="card-text"><small class="text-muted">Soumis par: {{ reclamation.user ? reclamation.user.fullName : 'N/A' }} le {{ reclamation.dateCreation|date('d/m/Y H:i') }}</small></p>
            <p><strong>Contenu de la réclamation:</strong> {{ reclamation.contenu|nl2br }}</p>
        </div>
    </div>

    <div class="card">
        <div class="card-header">Contenu de la Réponse</div>
        <div class="card-body">
            <p>{{ reponse.contenu|nl2br }}</p>
            <p><small class="text-muted">Répondu le: {{ reponse.dateReponse|date('d/m/Y H:i') }}</small></p>
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('admin_reclamation_respond', {'id': reclamation.id}) }}" class="btn btn-warning">Modifier cette Réponse</a>
        <a href="{{ path('admin_reclamation_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
{% endblock %}