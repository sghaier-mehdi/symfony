{# templates/article/edit.html.twig #}
{% extends 'back/base.html.twig' %}

{% block title %}Edit Article: {{ article.title|slice(0,30) }}{{ article.title|length > 30 ? '...' : '' }}{% endblock %}

{% block body %}
    <div class="admin-form-container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Edit Article</h1>
            <a href="{{ path('app_admin_article_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
        </div>

        <h4 class="mb-3 fst-italic">"{{ article.title }}"</h4>

        {{ include('article/_form.html.twig', {'button_label': 'Update Article'}) }}

        {# Optional: Add delete form here as well or link to show page which has it #}
        <div class="mt-4 pt-3 border-top">
            <h5 class="text-danger">Delete Article</h5>
            <p class="text-muted small">This action cannot be undone.</p>
            {{ include('article/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}