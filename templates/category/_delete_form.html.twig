{# templates/category/_delete_form.html.twig #}
<form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this category? This might affect articles linked to it.');" style="display: inline-block;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="btn btn-danger">
        <i class="bi bi-trash"></i> Delete
    </button>
</form>