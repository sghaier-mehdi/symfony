{# templates/category/edit.html.twig #}
{% extends 'back/base.html.twig' %}

{% block title %}Edit Category: {{ category.name }}{% endblock %}

{% block body %}
    <div class="admin-form-container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Edit Category</h1>
            <a href="{{ path('app_category_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
        </div>

        <h4 class="mb-3 fst-italic">"{{ category.name }}"</h4>

        {{ include('category/_form.html.twig', {'button_label': 'Update Category'}) }}

        <div class="mt-4 pt-3 border-top">
            <h5 class="text-danger">Delete Category</h5>
            <p class="text-muted small">This action cannot be undone and might affect articles linked to this category.</p>
            {{ include('category/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}