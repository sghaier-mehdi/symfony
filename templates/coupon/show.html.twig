{% extends 'back/base.html.twig' %}

{% block title %}Coupon Details{% endblock %}

{% block body %}
    <div class="container my-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h1 class="h3 mb-0">Coupon Details</h1>
                        <div>
                            <a href="{{ path('app_coupon_index') }}" class="btn btn-secondary btn-sm">
                                <i class="fa fa-arrow-left"></i> Back to list
                            </a>
                            <a href="{{ path('app_coupon_edit', {'id': coupon.id}) }}" class="btn btn-warning btn-sm">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>ID</th>
                                    <td>{{ coupon.id }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ coupon.name }}</td>
                                </tr>
                                <tr>
                                    <th>Code</th>
                                    <td><code>{{ coupon.code }}</code></td>
                                </tr>
                                <tr>
                                    <th>Discount Percentage</th>
                                    <td>{{ coupon.discountPercentage }}%</td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>
                                        {% if coupon.isActive %}
                                            <span class="badge bg-success">Active</span>
                                        {% else %}
                                            <span class="badge bg-danger">Inactive</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Expiration Date</th>
                                    <td>{{ coupon.expirationDate ? coupon.expirationDate|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Usage Count</th>
                                    <td>{{ coupon.usageCount }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        {{ include('coupon/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 