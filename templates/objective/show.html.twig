{% extends 'back/base.html.twig' %}

{% block title %}Objective Details{% endblock %}

{% block body %}
    <div class="container my-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h1 class="h3 mb-0">Objective Details</h1>
                        <div>
                            <a href="{{ path('app_objective_index') }}" class="btn btn-secondary btn-sm">
                                <i class="bi bi-arrow-left"></i> Back to list
                            </a>
                            <a href="{{ path('app_objective_edit', {'id': objective.id}) }}" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th style="width: 150px;">ID</th>
                                    <td>{{ objective.id }}</td>
                                </tr>
                                <tr>
                                    <th>Title</th>
                                    <td>{{ objective.title }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td style="white-space: pre-wrap;">{{ objective.description }}</td>
                                </tr>
                                <tr>
                                    <th>Points Required</th>
                                    <td>{{ objective.pointsRequired }}</td>
                                </tr>
                                {% if is_granted('ROLE_ADMIN') %}
                                <tr>
                                    <th>Assigned To</th>
                                    <td>
                                        {% if objective.user %}
                                            {{ objective.user.email }}
                                        {% else %}
                                            <span class="text-muted">Unassigned</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endif %}
                                <tr>
                                    <th>Created At</th>
                                    <td>{{ objective.createdAt ? objective.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Updated At</th>
                                    <td>{{ objective.updatedAt ? objective.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        {{ include('objective/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 