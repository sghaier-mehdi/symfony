{# templates/user/show.html.twig #}
{% extends 'back/base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <div class="admin-show-container mt-4"> {# Optional wrapper #}
        <h1>User: {{ user.username }}</h1>

        <table class="table table-bordered mt-3">
             <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>FullName</th>
                <td>{{ user.fullName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ user.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role }}</td>
            </tr>
        </tbody>
        </table>

        <div class="mt-3">
            <a href="{{ path('app_users_edit', {'id': user.id}) }}" class="btn btn-primary me-2">
                <i class="bi bi-pencil-square"></i> Edit User
            </a>
            <a href="{{ path('app_users_index') }}" class="btn btn-secondary me-2">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
            {# Delete form button #}
            {{ include('user/_delete_form.html.twig') }} {# Ensure this included form's button is styled #}
        </div>
    </div>
{% endblock %}